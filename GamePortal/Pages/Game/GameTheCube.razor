@page "/thecube"

<GameTheCubePaper />

@code
{
    protected override async Task OnInitializedAsync()
    {
        AppCenterService.TrackEvent("Game-TheCube", "JoinGame", "Joined");

        HelperPath.Path = await Location.GetPathname();

        await Task.Delay(DelayValue.Initialize);

        await Include.StylesheetProtected("css/game/thecube/style.css", HelperPath.Path);

        await Include.ScriptProtected("js/game/thecube/three.min.js", HelperPath.Path);

        await GetRender();
    }
    
    private async Task GetRender()
    {
        await Task.Delay(DelayValue.Render);

        await Include.ScriptProtected("js/game/thecube/script.js", HelperPath.Path);
    }
}
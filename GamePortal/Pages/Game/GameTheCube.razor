@page "/thecube"

<GameTheCubePaper />

@code
{
    protected override async Task OnInitializedAsync()
    {
        AppCenterService.TrackEvent("Game-TheCube", "JoinGame", "Joined");

        await Task.Delay(DelayValue.Initialize);

        await Include.Stylesheet("css/game/thecube/style.css");

        await Include.Script("js/game/thecube/three.min.js");

        await GetRender();
    }
    
    private async Task GetRender()
    {
        await Task.Delay(DelayValue.Render);

        await Include.Script("js/game/thecube/script.js");
    }
}
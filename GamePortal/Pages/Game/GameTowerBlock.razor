@page "/towerblock"

<GameTowerBlockContainer />

@code
{
    protected override async Task OnInitializedAsync()
    {
        AppCenterService.TrackEvent("Game-TowerBlock", "JoinGame", "Joined");

        HelperPath.Path = await Location.GetPathname();

        await Task.Delay(DelayValue.Initialize);
        
        await Include.StylesheetProtected("css/game/towerblock/style.css", HelperPath.Path);

        await Include.ScriptProtected("js/game/towerblock/three.min.js", HelperPath.Path);

        await Include.ScriptProtected("js/game/towerblock/tweenmax.min.js", HelperPath.Path);
        
        await GetRender();
    }

    private async Task GetRender()
    {
        await Task.Delay(DelayValue.Render);

        await Include.ScriptProtected("js/game/towerblock/script.js", HelperPath.Path);
    }
}
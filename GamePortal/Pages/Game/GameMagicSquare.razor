@page "/magicsquare"

<GameExit />

<GameMagicSquarePaper />

@code
{
    protected override async Task OnInitializedAsync()
    {
        AppCenterService.TrackEvent("Game-MagicSquare", "JoinGame", "Joined");

        HelperPath.Path = await Location.GetPathname();

        await Task.Delay(DelayValue.Initialize);

        await Include.StylesheetProtected("css/game/magicsquare/baloo.400.css", HelperPath.Path);
        await Include.StylesheetProtected("css/game/magicsquare/style.css", HelperPath.Path);

        await Include.ScriptProtected("js/game/magicsquare/jquery.min.js", HelperPath.Path);

        await GetRender();
    }

    private async Task GetRender()
    {
        await Task.Delay(DelayValue.Render);

        await Include.ScriptProtected("js/game/magicsquare/script.js", HelperPath.Path);
    }
}
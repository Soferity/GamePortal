@page "/sweetmemory"

<div id="score-panel">
    <GameSweetMemoryStars />
    <GameSweetMemoryMoves />
    <GameSweetMemoryExit />
    <GameSweetMemoryRestart />
</div>
<GameSweetMemoryDeck />

@code
{
    protected override async Task OnInitializedAsync()
    {
        AppCenterService.TrackEvent("Game-SweetMemory", "JoinGame", "Joined");

        await Task.Delay(DelayValue.Initialize);
        
        await Include.Stylesheet("https://maxcdn.bootstrapcdn.com/font-awesome/4.6.1/css/font-awesome.min.css");
        await Include.Stylesheet("https://fonts.googleapis.com/css?family=Coda");
        
        await Include.Stylesheet("css/game/sweetmemory/sweetalert2.min.css");
        await Include.Stylesheet("css/game/sweetmemory/animate.css");
        await Include.Stylesheet("css/game/sweetmemory/style.css");

        await Include.Script("js/game/classic2048/jquery.js");

        await GetRender();
    }
    
    private async Task GetRender()
    {
        await Task.Delay(DelayValue.Render);

        await Include.Script("js/game/sweetmemory/jquery.min.js");
        await Include.Script("js/game/sweetmemory/sweetalert2.min.js");
        await Include.Script("js/game/sweetmemory/script.js");
    }
}
@code
{
    protected override async Task OnInitializedAsync()
    {
        AppCenterService.TrackEvent("Page-Error");

        HelperPath.Path = await Location.GetPathname();

        await Task.Delay(DelayValue.Initialize);

        await Include.StylesheetProtected("css/error/quicksand.700.css", HelperPath.Path);

        await Include.StylesheetProtected("css/error/font-awesome.min.css", HelperPath.Path);
        await Include.StylesheetProtected("css/error/style.css", HelperPath.Path);
    }
}